<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts-config PUBLIC
          "-//Apache Software Foundation//DTD Struts Configuration 1.3//EN"
          "http://struts.apache.org/dtds/struts-config_1_3.dtd">
          
<struts-config>
	
	<form-beans>
		<form-bean name="RF" type="com.pocDA.form.regForm"/>
	</form-beans>
	
	<action-mappings>
		<action path="/reg" name="RF" type="com.pocDA.action.regAction" parameter="submit">
			<forward name="success" path="/success.jsp"/>
		</action>
		

		<action path="/changelang" type="com.pocDA.action.NavgAction">
			<forward name="index" path="/index.jsp"/>
		</action>
	</action-mappings>
	
	<message-resources parameter="Resources/language" />	
</struts-config>          