<struts-config>

	<form-beans>
	   <form-bean name="UserForm" type="com.poc.custom.form.UserForm"/>
	</form-beans>

	<action-mappings>
	   <action path="/regAction" type="com.poc.custom.action.RegAction" name="UserForm">
