<!DOCTYPE hibernate-mapping PUBLIC 
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="com.poc.form.Movies" table="MOVIES_INFO" schema="systemDB">
		<id name="mid" column="M_ID"/>
		<property name="name" column="M_NAME"/>
		
		<many-to-one name="actor" class="com.poc.form.Actor" fetch="select">
            <column name="A_ID"/>
        </many-to-one>
        
	</class>
</hibernate-mapping>